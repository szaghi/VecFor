#templates
# GNU
[template-shared-gnu-r4p]
compiler     = gnu
cflags       = $CSHARED_GNU $OPTIMIZE
lflags       = $LSHARED $OPTIMIZE
preproc      = -D_R16P_SUPPORTED $PREPROCS_R4P
exclude_dirs = $EXDIRS
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
colors       = True
quiet        = False
log          = True
jobs         = 2

[template-static-gnu-r4p]
compiler     = gnu
cflags       = $CSTATIC_GNU $OPTIMIZE
lflags       = $OPTIMIZE
preproc      = -D_R16P_SUPPORTED $PREPROCS_R4P
exclude_dirs = $EXDIRS
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
colors       = True
quiet        = False
log          = True
jobs         = 2

[template-shared-gnu-debug-r4p]
compiler     = gnu
cflags       = $CSHARED_GNU $DEBUG_GNU
lflags       = $LSHARED $DEBUG_GNU
preproc      = -D_R16P_SUPPORTED -DDEBUG $PREPROCS_R4P
exclude_dirs = $EXDIRS
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
colors       = True
quiet        = False
log          = True
jobs         = 2

